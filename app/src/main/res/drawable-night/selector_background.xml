<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/primary" />

                    <corners android:radius="6dp" />

                    <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_arrow_drop_up" android:gravity="right|top" android:bottom="5dp"/>
            <item android:drawable="@drawable/ic_baseline_arrow_drop_down" android:gravity="right|bottom" android:top="5dp"/>
        </layer-list>
    </item>
</selector>